{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Wardrobe Installer",
    "version": "0.1.0",
    "identifier": "gg.wardrobe.installer",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Wardrobe Installer",
                "width": 1134,
                "height": 670,
                "resizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
